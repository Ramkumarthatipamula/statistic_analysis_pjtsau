<%= form_with(model: statistic, local: true) do |form| %>
  <% if statistic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(statistic.errors.count, "error") %> prohibited this statistic from being saved:</h2>

      <ul>
      <% statistic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :no_of_treatments %>
    <%= form.number_field :no_of_treatments %>
  </div>

  <div class="field">
    <%= form.label :no_of_samples %>
    <%= form.number_field :no_of_samples %>
  </div>

  <div class="field">
    <%= form.label :analytical_type %>
    <%= form.text_field :analytical_type %>
  </div>

  <div class="field">
    <%= form.label :excel_file %>
    <% if statistic.excel_file.attached? %>
      <%= statistic.excel_file.filename %><br/>
      <small><%= link_to 'Remove excel', statistic_delete_excel_attachment_path(statistic),
      method: :delete, data: { confirm: 'Are you sure?' } %></small><br/>
    <% end %>
    <%= form.file_field :excel_file %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
